<section class="container">
        <h1 align="center" color="red">TODO APP</h1>

            <!-- form to create task -->
        <form action="/create-task" method="POST">

            <table class="table">
                <thead>
                  <tr class="table-active">
                    <th > DESCRIPTION</th>
                    <th >CATEGORY</th>
                    <th >DATE</th>
                    
                  </tr>
                </thead>
            
            
                <tbody>
                    <tr>
                      <td> <input type="text" name="description"placeholder= 'MY TASKS' required></input></th>
                      <td >  <select name="category" required>

                        <option>  WORK</option>
                        <option>GYM</option>     
